<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <property name="CONSOLE_LOG_PATTERN"
    value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS,UTC}Z ${LOG_LEVEL_PATTERN:-%5p} --- [%t] %logger.%M.%L : %m%n"/>

  <appender class="ch.qos.logback.core.ConsoleAppender" name="console">
    <encoder>
      <charset>utf8</charset>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <!-- Minimum logging level to be presented in the console logs-->
      <level>TRACE</level>
    </filter>
  </appender>

  <logger additivity="false" level="${QALIPSIS_LOGGING_LEVEL:-DEBUG}" name="io.qalipsis">
    <appender-ref ref="console"/>
  </logger>


  <logger additivity="false" level="TRACE" name="io.qalipsis.core.factories.steps.CollectionStep">
    <appender-ref ref="console"/>
  </logger>

  <root level="${LOGGING_LEVEL:-INFO}">
    <appender-ref ref="console"/>
  </root>

</configuration>
