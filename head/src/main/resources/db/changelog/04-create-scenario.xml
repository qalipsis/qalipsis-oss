<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
  <changeSet id="04" author="rklymenko">
    <createSequence sequenceName="scenario_seq" schemaName="qalipsis"/>
    <createTable tableName="scenario" schemaName="qalipsis">
      <column name="id" type="BIGINT" valueSequenceNext="scenario_seq">
        <constraints nullable="false" primaryKey="true" primaryKeyName="scenario_pk"/>
      </column>
      <column name="version" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="factory_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="scenario_factory_id_fk" referencedTableName="factory"
          referencedColumnNames="id" deleteCascade="true"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="default_minions_count" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="enabled" type="BOOLEAN" defaultValue="TRUE">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex schemaName="qalipsis" indexName="unique_scenario_name_by_factory_idx" tableName="scenario"
      unique="true">
      <column name="factory_id"/>
      <column name="name"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>