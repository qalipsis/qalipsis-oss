<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
  <changeSet id="10" author="pbril">
    <createSequence sequenceName="campaign_report_seq" schemaName="qalipsis"/>
    <createTable tableName="campaign_report" schemaName="qalipsis">
      <column name="id" type="BIGINT" valueSequenceNext="campaign_report_seq">
        <constraints nullable="false" primaryKey="true" primaryKeyName="campaign_report_pk"/>
      </column>
      <column name="version" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="campaign_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="campaign_report_id_fk" referencedTableName="campaign"
          referencedColumnNames="id" deleteCascade="true"/>
      </column>
      <column name="started_minions" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="completed_minions" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="successful_executions" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="failed_executions" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="status" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createIndex schemaName="qalipsis" indexName="unique_report_by_campaign_idx" tableName="campaign_report"
      unique="true">
      <column name="campaign_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>